<?xml version="1.0" encoding="UTF-8"?>

<!--
  This FXML defines the layout for the "Add new address" dialog.
  - A BorderPane is used as the root to separate the main content from the buttons.
  - The 'right' region holds the OK and Cancel buttons in a VBox for vertical alignment.
  - The 'center' region uses a GridPane to align the "Address" label and the ComboBox input field.
-->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.sinakarimi.jdown.AddUrlController">
    <right>
        <!-- This VBox holds the action buttons, ensuring they are stacked vertically. -->
        <VBox alignment="TOP_CENTER" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="okButton" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleOkAction" text="OK" />
                <Button cancelButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCancelAction" text="Cancel" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </right>
    <center>
        <!-- A GridPane is perfect for aligning labels with their corresponding input fields. -->
        <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Address" GridPane.halignment="RIGHT" />
                <TextField fx:id="addressTextField" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>
    </center>
</BorderPane>